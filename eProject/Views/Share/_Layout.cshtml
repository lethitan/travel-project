@using Microsoft.AspNetCore.Http;


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Karnel Travels web </title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/User/img/favicon.png" rel="icon">
    <link href="~/User/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,700,700i&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/User/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/User/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/User/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/User/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/User/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/User/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/User/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/User/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: Moderna - v4.3.0
    * Template URL: https://bootstrapmade.com/free-bootstrap-template-corporate-moderna/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">

            <div class="logo">
                <h1 class="text-light"><a href="index.html"><span>Karnel Travels</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="~/User/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    <li><a asp-controller="home" asp-action="about">About us</a></li>
                    <li><a asp-controller="tourist" asp-action="index">Infomation</a></li>
                    <li class="dropdown">
                        <a href="#"><span>Search</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a asp-controller="search" asp-action="index">Tourist Spots</a></li>
                            <li><a asp-controller="search" asp-action="index2">Rest service</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        @if (Context.Session.GetString("username") == null)
                        {
                            <a href="#"><span>Account</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a asp-controller="account" asp-action="register">Register</a></li>
                                <li><a asp-controller="account" asp-action="login">Login</a></li>
                            </ul>
                        }
                        else
                        {
                            <a href="#"><span>Hello @Context.Session.GetString("username") </span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a asp-controller="account" asp-action="logout">Logout</a></li>
                                <li><a asp-controller="account" asp-action="profile">Change personal information</a></li>
                            </ul>

                        }
                    </li>
                    <li><a asp-controller="home" asp-action="contact">Contact us</a></li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    @RenderBody();


    <!-- Vendor JS Files -->
    <script src="~/User/vendor/aos/aos.js"></script>
    <script src="~/User/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/User/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/User/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/User/vendor/php-email-form/validate.js"></script>
    <script src="~/User/vendor/purecounter/purecounter.js"></script>
    <script src="~/User/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/User/vendor/waypoints/noframework.waypoints.js"></script>

    <!-- Template Main JS File -->
    <script src="~/User/js/main.js"></script>
</body>
</html>
