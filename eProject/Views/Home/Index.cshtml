@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Share/_Layout.cshtml";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex justify-cntent-center align-items-center">
    <div id="heroCarousel" class="container carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        <!-- Slide 1 -->
        <div class="carousel-item active">
            <div class="carousel-container">
                <h2 class="animate__animated animate__fadeInDown">Welcome to <span>Karnel Travels</span></h2>
                <p class="animate__animated animate__fadeInUp">You want to find information about tourist attractions.Please come to our website. You will have everything you need .</p>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <div class="carousel-container">
                <h2 class="animate__animated animate__fadeInDown">Safe travel experience peace of mind</h2>
                <p class="animate__animated animate__fadeInUp">Here you can safely search for tourist destinations with affordable pahri prices and not be afraid of being scammed. These locations have been securely checked and verified by our team .</p>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
            <div class="carousel-container">
                <h2 class="animate__animated animate__fadeInDown">Discover thousands of travel experiences around the world</h2>
                <p class="animate__animated animate__fadeInUp">Your memorable journey starts here. Find the best travel information here .</p>
            </div>
        </div>

        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bx bx-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bx bx-chevron-right" aria-hidden="true"></span>
        </a>

    </div>
</section><!-- End Hero -->
