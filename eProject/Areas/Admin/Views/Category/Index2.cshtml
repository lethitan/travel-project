@{
    ViewData["Title"] = "index2";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Default Example <small>category of tourist</small></h2>
                <div class="page-title">
                    <div class="title_right">
                       
                    </div>
                </div>

            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th colspan="2">Active</th>
                            </tr>
                            @foreach (var cate in ViewBag.cates)
                            {
                                <tr>
                                    <td>@cate.Id</td>
                                    <td>@cate.Name</td>
                                    <td><a asp-controller="category" asp-action="edittour" asp-route-id="@cate.Id">Edit</a></td>
                                    <td><a asp-controller="category" asp-action="deletetour" asp-route-id="@cate.Id" onclick="return confirm('Are you sure?')">Delete</a></td>
                                </tr>
                            }
                            @Html.Raw(TempData["msgCates"])
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
