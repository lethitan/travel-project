@{ ViewData["Title"] = "index";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml"; }
@Html.Raw(TempData["msgID"])
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Default Example <small>Trourist Spots</small></h2>
                <div class="page-title">
                    <div class="title_right">
                        <form asp-area="admin" asp-controller="touristSpot" asp-action="searchbyName" method="get">
                            <div class="col-md-7 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" name="name" class="form-control" placeholder="Search by name...">
                                    <span class="input-group-btn">
                                        <input type="submit" class="btn btn-secondary" value="Go !" />
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Descrip</th>
                                <th>Active</th>
                                <th>Category</th>
                                <th>Satus</th>
                                <th colspan="2">Action</th>
                            </tr>
                            @foreach (var touristSpot in ViewBag.tourSpot)
                            {
                <tr>
                    <td>@touristSpot.Id</td>
                    <td>@touristSpot.Name</td>
                    <td>@touristSpot.Addr</td>
                    <td>@touristSpot.Descrip</td>
                    <td>@touristSpot.Active</td>
                    <td>@touristSpot.Category.Name</td>
                    <td>@touristSpot.Stt</td>

                    <td>
                        <a asp-area="admin" asp-controller="touristSpot" asp-action="edit" asp-route-id="@touristSpot.Id">Edit</a>
                        <a asp-area="admin" asp-controller="touristSpot" asp-action="delete" asp-route-id="@touristSpot.Id" onclick="return confirm('Are you sure?')">Delete</a>

                    </td>
                    <td>
                        <a asp-area="admin" asp-controller="touristSpot" asp-action="img" asp-route-id="@touristSpot.Id">Images</a>
                        <a asp-area="admin" asp-controller="touristSpot" asp-action="travel" asp-route-id="@touristSpot.Id"> Vehicles</a>
                    </td>
                </tr>}
                            @Html.Raw(TempData["msg"])
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
