@{
    ViewData["Title"] = "edit";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}
@model eProject.Models.Servi
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit TouristSpot </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #666666;">
    <div class="limiter">
        <div class="container-login100">
            <form method="post" enctype="multipart/form-data" asp-area="admin" asp-controller="service" asp-action="edit" asp-route-id="@Model.Id" class="login100-form validate-form">
                <span class="login100-form-title p-b-43">
                    Change restaunrant, hotel & resort
                </span>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" asp-for="Id">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Id</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" asp-for="Name">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Name</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" asp-for="Addr">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Address</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <textarea class="input100" type="text" cols="10" asp-for="Descrip"></textarea>
                    <span class="focus-input100"></span>
                    <span class="label-input100">Description</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <select class="input100" asp-for="TourId">
                        @foreach (var tour in ViewBag.tours)
                        {
                            <option value="@tour.Id">@tour.Name</option>
                        }
                    </select>
                    <span class="focus-input100"></span>
                    <span class="label-input100">Tourist spot</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <select class="input100" asp-for="CategoryId">
                        @foreach (var cate in ViewBag.cates)
                        {
                            <option value="@cate.Id">@cate.Name</option>
                        }
                    </select>
                    <span class="focus-input100"></span>
                    <span class="label-input100">Category</span>
                </div>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="checkbox" asp-for="Stt">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Status</span>
                </div>
                <div class="container-login100-form-btn">
                    <input type="submit" class="login100-form-btn" value="Save" />
                </div>
            </form>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login/js/main.js"></script>

</body>
</html>